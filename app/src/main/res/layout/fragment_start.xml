<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".presentation.screen.main.MainActivity">

    <TextView
        android:id="@+id/fragment_start_center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        tools:text="Text"/>

    <TextView
        android:id="@+id/fragment_start_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:drawableBottom="@drawable/ic_chevron_down"
        android:text="@string/start_close"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>
</FrameLayout>
